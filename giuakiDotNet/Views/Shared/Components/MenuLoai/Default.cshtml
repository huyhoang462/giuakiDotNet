@model IEnumerable<giuakiDotNet.ViewModels.SubCategoryVM>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="hero__categories">
                <div class="hero__categories__all">
                    <i class="fa fa-bars"></i>
                    <span>Danh mục sản phẩm</span>
                </div>
                <ul>
                    @foreach (var item in Model)
                    {
                        <li><a asp-controller="Home" asp-action="Index" asp-route-loai="@item.SubCategoryId">@item.SubCategoryName</a></li>

                    }

                </ul>
            </div>
        </div>

    </div>
</div>